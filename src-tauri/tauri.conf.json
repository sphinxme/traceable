{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "traceable",
  "version": "0.0.1",
  "identifier": "com.sphinx.traceable",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "deno task dev",
    "beforeBuildCommand": "deno task build"
  },

  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "traceable",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "http://*/*",
          "http://124.221.36.39:5984/*"
        ]
      },
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
